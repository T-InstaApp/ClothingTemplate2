<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>


    <style name="bottom" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/prime</item>
        <item name="colorAccent">@color/prime</item>
        <!-- ... -->
    </style>

    <style name="cardViewStyle" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30%</item>
        <item name="cornerSizeBottomRight">30%</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">1dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">1dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="My_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/heading</item>
        <item name="android:textColor">@color/text</item>
        <item name="closeIconTint">@color/heading</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/prime_dark</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CustomHintText">
        <item name="android:layout_marginStart">80dp</item> <!-- Adjust margin as needed -->
        <item name="android:layout_marginEnd">8dp</item>   <!-- Adjust margin as needed -->
    </style>

    <style name="TextInputLayoutHintText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>


</resources>

