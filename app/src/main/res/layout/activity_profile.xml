<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/semi_background"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20sdp">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:dividerPadding="@dimen/_8sdp"
                    android:hint="Salutation"
                    app:endIconCheckable="false"
                    app:endIconMode="custom"
                    app:endIconTint="@color/black"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/etSalutation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:inputType="textPersonName"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="0dp"
                        android:text="Mr."
                        android:textSize="@dimen/_11sdp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="Username"
                    app:endIconCheckable="false"
                    app:endIconMode="custom"
                    app:endIconTint="@color/black"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/nunito_regular"
                        android:inputType="textPersonName"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:text="Niraj14"
                        android:textSize="@dimen/_11sdp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="First Name"
                    app:endIconCheckable="false"
                    app:endIconMode="custom"
                    app:endIconTint="@color/black"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:inputType="textPersonName"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:text="Niraj"
                        android:textSize="@dimen/_11sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="Last Name"
                    app:endIconCheckable="false"
                    app:endIconMode="custom"
                    app:endIconTint="@color/black"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:inputType="textPersonName"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:text="Kumar"
                        android:textSize="@dimen/_11sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="Email"
                    app:endIconCheckable="false"
                    app:endIconMode="custom"
                    app:endIconTint="@color/black"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/nunito_regular"
                        android:inputType="textPersonName"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:textSize="@dimen/_11sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="2"
                        android:hint="Code"
                        app:endIconCheckable="false"
                        app:endIconMode="custom"
                        app:endIconTint="@color/black"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:inputType="textPersonName"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:text="+91"
                            android:textSize="@dimen/_11sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:hint="Mobile"
                        app:endIconCheckable="false"
                        app:endIconMode="custom"
                        app:endIconTint="@color/black"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:inputType="textPersonName"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:text="8109471732"
                            android:textSize="@dimen/_11sdp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtPasswordChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/change_your_password"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpdateProfile"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/button_background"
                    android:elevation="@dimen/_8sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Update Profile"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/progressDialog"
            layout="@layout/progress_dialog" />
    </RelativeLayout>

</layout>
